<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="well bs-component">
        <form class="form-horizontal" method="post" action="/schedule/new">
        <fieldset>
        <legend>Kurzusfelvétel</legend>
            <div class="form-group">
            <label for="course" class="col-lg-2 control-label">kurzus</label>
                <div class="col-lg-10">
                      <select class="form-control" id="course" name="course">
                        {{#each courses as |course|}}
                          <option value="{{course.id}}">{{course.subject.subject}} ({{course.teacher.name}}) [{{course.time}} @ {{course.location}}] </option>
                        {{/each}}
                      </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">

                   <button type="submit" class="btn btn-primary">Felvétel</button>
                </div>
            </div>
                 </fieldset>
               </form>
        </div>
    </div>
</div>