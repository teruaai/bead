<h1>Admin - Felvétel</h1>


<div class="row">
    
    
    
  <div class="col-md-3">
    <div class="well bs-component">
      <form class="form-horizontal" method="post" action="/admin/add/subject">
        <fieldset>
          <legend>Tárgyfelvétel</legend>

          <div class="form-group">
            <label for="subject-s" class="col-lg-12">tárgynév</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" id="subject-s" name="subject" placeholder="tárgynév">
            </div>
          </div>
          <div class="form-group">
            <label for="credits" class="col-lg-12">kreditek</label>
            <div class="col-lg-4">
              <input type="number" class="form-control" id="credits" name="credits" min="0" max="30" placeholder="kreditek">
            </div>
          </div>
        
          <div class="form-group">
            <div class="col-lg-12">
              <button type="reset" class="btn btn-default">Törlés</button>
              <button type="submit" class="btn btn-primary">Felvétel</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="well bs-component">
      <form class="form-horizontal" method="post" action="/admin/add/teacher">
        <fieldset>
          <legend>Tanárfelvétel</legend>
          
          <div class="form-group">
            <label for="name" class="col-lg-12">név</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" id="name" name="name" placeholder="név">
              
            </div>
          </div>
          
          <div class="form-group">
            <label for="room" class="col-lg-12">szoba</label>
            <div class="col-lg-12">
              <input type="text" class="form-control" id="room" name="room" placeholder="szoba">
              
            </div>
          </div>
         
          <div class="form-group">
            <div class="col-lg-12">
              <button type="reset" class="btn btn-default">Törlés</button>
              <button type="submit" class="btn btn-primary">Felvétel</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
  
  
  <div class="col-md-6">
    <div class="well bs-component">
      <form class="form-horizontal" method="post" action="/admin/add/course">
        <fieldset>
          <legend>Kurzusfelvétel</legend>
          
          
          <div class="form-group">
            <label for="subject" class="col-lg-2 control-label">tárgy</label>
            <div class="col-lg-10">
              <select class="form-control" id="subject" name="subject">
                {{#each subjects as |subject|}}
                  <option value="{{subject.id}}">{{subject.subject}} ({{subject.credits}} kredit) </option>
                  {{/each}}
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label for="teacher" class="col-lg-2 control-label">tanár</label>
            <div class="col-lg-10">
              <select class="form-control" id="teacher" name="teacher">
                {{#each teachers as |teacher|}}
                  <option value="{{teacher.id}}">{{teacher.name}} ({{teacher.room}}) </option>
                  {{/each}}
              </select>
            </div>
          </div>
          

           
          <div class="form-group">
            <label for="time" class="col-lg-2 control-label">időpont</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="time" name="time" placeholder="időpont">
            </div>
          </div>
          
          <div class="form-group">
            <label for="location" class="col-lg-2 control-label">helyszín</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="location" name="location" placeholder="helyszín">
            </div>
          </div>
          
          
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="reset" class="btn btn-default">Törlés</button>
              <button type="submit" class="btn btn-primary">Felvétel</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>

  
</div>