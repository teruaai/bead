<h1 style="text-align: center">Tárgyaim</h1>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Tárgy</th>
      <th>Helyszín </th>
      <th>Időpont</th>
      <th>Tanár</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    {{#each courses as |course|}}
    <tr>
        <td>{{course.subject.subject}}</td>
        <td>{{course.location}}</td>
        <td>{{course.time}}</td>
        <td>{{course.teacher.name}}</td>
        <td style="width: 90px">
          <a href="/schedule/delete/{{course.id}}" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>